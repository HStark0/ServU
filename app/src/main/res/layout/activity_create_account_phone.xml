<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F5"
    tools:context=".CreateAccountActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Qual o número do seu celular?"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/phoneInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/countryCodeButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+ 55"
            app:icon="@drawable/ic_brazil_flag"
            app:backgroundTint="#1ABC9C"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(00) 00000-0000"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/helperText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Número de acesso à conta. Por segurança, informação não poderá ser alterada"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/phoneInputLayout"
        app:layout_constraintStart_toStartOf="@id/phoneInputLayout"
        app:layout_constraintEnd_toEndOf="@id/phoneInputLayout" />

    <TextView
        android:id="@+id/howToReceiveCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Como deseja receber o código?"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/helperText"
        app:layout_constraintStart_toStartOf="@id/helperText"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/whatsappButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Receber por WhatsApp"
        app:backgroundTint="#1ABC9C"
        app:layout_constraintTop_toBottomOf="@id/howToReceiveCode"
        app:layout_constraintStart_toStartOf="@id/phoneInputLayout"
        app:layout_constraintEnd_toEndOf="@id/phoneInputLayout"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/smsButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Receber por SMS"
        android:textColor="#1ABC9C"
        app:strokeColor="#1ABC9C"
        app:layout_constraintTop_toBottomOf="@id/whatsappButton"
        app:layout_constraintStart_toStartOf="@id/whatsappButton"
        app:layout_constraintEnd_toEndOf="@id/whatsappButton" />

    <ImageView
        android:id="@+id/bottomLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_servu_small"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
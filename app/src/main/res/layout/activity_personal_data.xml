<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F5"
    tools:context=".PersonalDataActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/cpfTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Qual o seu CPF?"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cpfInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cpfTitle"
        app:layout_constraintStart_toStartOf="@id/cpfTitle"
        app:layout_constraintEnd_toEndOf="@id/cpfTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cpfEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="000.000.000-00"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/cpfHelperText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Informar o CPF garante ainda mais segurança para a sua conta"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/cpfInputLayout"
        app:layout_constraintStart_toStartOf="@id/cpfInputLayout"
        app:layout_constraintEnd_toEndOf="@id/cpfInputLayout" />

    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Qual o seu nome e sobrenome?"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/cpfHelperText"
        app:layout_constraintStart_toStartOf="@id/cpfTitle"
        app:layout_constraintEnd_toEndOf="@id/cpfTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/nameTitle"
        app:layout_constraintStart_toStartOf="@id/nameTitle"
        app:layout_constraintEnd_toEndOf="@id/nameTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Completo"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/nameHelperText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seu nome completo ajuda o Prestador a saber quem pediu o serviço"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/nameInputLayout"
        app:layout_constraintStart_toStartOf="@id/nameInputLayout"
        app:layout_constraintEnd_toEndOf="@id/nameInputLayout" />

    <TextView
        android:id="@+id/termsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ao continuar, você concorda com os Termos de Uso e está ciente da Declaração de Privacidade"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/nameHelperText"
        app:layout_constraintStart_toStartOf="@id/nameInputLayout"
        app:layout_constraintEnd_toEndOf="@id/nameInputLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createAccountFinalButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Criar conta"
        app:backgroundTint="#1ABC9C"
        app:layout_constraintBottom_toTopOf="@+id/bottomLogo"
        app:layout_constraintStart_toStartOf="@id/termsText"
        app:layout_constraintEnd_toEndOf="@id/termsText"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/bottomLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_servu_small"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>